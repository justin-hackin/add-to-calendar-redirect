{
  "manifest_version": 3,
  "name": "Calendar Chooser",
  "version": "1.0",
  "description": "Redirects Google Calendar 'Add to Calendar' links to your custom event handler, enabling you to build your own event management system.",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "webNavigation",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://calendar.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings.html",
        "settings.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}